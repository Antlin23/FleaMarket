@using FleaMarket.Models.ViewModels;
@model RegisterUserViewModel
@{
    ViewData["Title"] = "Registrera konto";
}
<nav class="container breadcrumb-container" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Hem</a></li>
        <li class="breadcrumb-item active">Skapa konto</li>
    </ol>
</nav>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Skapa konto</h2>
            <p>Kom enkelt igång och sälj genom att skapa ett konto.</p>
            <form class="mb-3" method="post" asp-action="RegisterUser" asp-controller="Authentication" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" id="form-group-companyName" style="display: none;">
                    <label asp-for="CompanyName">Företag-/organisationsnamn:*</label>
                    <input asp-for="CompanyName" type="text" class="form-control" id="companyName" rows="3" placeholder="Ange företagsnamn" />
                    <span class="small text-danger" asp-validation-for="CompanyName"></span>
                </div>
                <div class="form-group form-group-Username">
                    <label asp-for="UserName">Användarnamn:*</label>
                    <input asp-for="UserName" type="text" class="form-control" id="userName" placeholder="Ange ditt användarnamn">
                    <span class="small text-danger" asp-validation-for="UserName"></span>
                </div>

                <div id="isCompanyCheckboxGroup" class="mt-3">
                    <input id="isCompanyCheckbox" type="checkbox" />
                    <label for="isCompanyCheckbox">Vi är en organisation eller ett företag</label>
                    <span class="small text-danger d-block"></span>
                </div>

                <div class="form-group">
                    <label asp-for=Email>Email:*</label>
                    <input asp-for=Email type="email" class="form-control" id="email" placeholder="Ange din email-adress">
                    <span class="small text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for=Password>Lösenord:*</label>
                    <input asp-for=Password type="password" class="form-control" id="password" rows="3" placeholder="Ange ditt lösenord" />
                    <span class="small text-danger" asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="mt-3 btn btn-primary">Skapa konto</button>
            </form>
            <a class="my-5" asp-controller="Authentication" asp-action="LoginUser">Har du redan ett konto? <span class="text-decoration-underline">Logga in</span></a>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    document.getElementById('isCompanyCheckbox').addEventListener('change', function () {
        var companyNameFormGroup = document.getElementById('form-group-companyName');
        var userNameFormGroup = document.querySelector('.form-group-Username');

        if (this.checked) {
            companyNameFormGroup.style.display = 'block';
            userNameFormGroup.style.display = 'none';
        } else {
            companyNameFormGroup.style.display = 'none';
            userNameFormGroup.style.display = 'block';
        }
    });

    document.getElementById('isCompanyCheckbox').addEventListener('change', function () {
        var userNameInput = document.getElementById('userName');
        if (this.checked) {
            userNameInput.value = 'company';
        } else {
            userNameInput.value = ''; // Clear the value if the checkbox is unchecked
        }
    });
</script>