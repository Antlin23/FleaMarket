@using FleaMarket.Models.ViewModels;
@model RegisterUserViewModel
@{
    ViewData["Title"] = "Registrera konto";
}

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Skapa ett företagskonto</h2>
            <p>Kom enkelt igång och sälj genom att skapa ett konto.</p>
            <hr />
            <form method="post" asp-action="RegisterUser" asp-controller="Authentication" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" id="form-group-companyName">
                    <input asp-for="CompanyName" type="text" class="form-control" id="companyName" rows="3" placeholder="Ange företagsnamn" />
                    <span class="small text-danger" asp-validation-for="CompanyName"></span>
                </div>

                <div class="form-group">
                    <input asp-for=Email type="email" class="form-control" id="email" placeholder="E-postadress">
                    <span class="small text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input asp-for=Password type="password" class="form-control" id="password" rows="3" placeholder="Lösenord" />
                    <span class="small text-danger" asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="button">Skapa konto</button>
            </form>

            <div class="auth-container--footer">
                <a class="register-company-link" asp-controller="Authentication" asp-action="RegisterUser">Skapa ett konto för privatperson</a>
                <p class="mt-3">Har du redan ett konto?</p>
                <a class="button register-btn" asp-controller="Authentication" asp-action="LoginUser">Logga in</a>
            </div>
        </div>
    </div>
</div>
