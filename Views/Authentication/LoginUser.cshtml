@using FleaMarket.Models.ViewModels;
@model LoginViewModel
@{
    ViewData["Title"] = "Logga in";
}
<nav class="container breadcrumb-container" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Hem</a></li>
        <li class="breadcrumb-item active">Logga in</li>
    </ol>
</nav>

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Logga in</h2>
            <hr />
            <form method="post" asp-action="LoginUser" asp-controller="Authentication" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for=Email type="email" class="form-control" id="email" placeholder="Ange e-postadress">
                    <span class="small text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input asp-for=Password type="password" class="form-control" id="password" rows="3" placeholder="Lösenord" />
                    <span class="small text-danger" asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="button">Logga in</button>
            </form>
            <p>Har du inget konto än?</p>
            <a class="button register-btn" asp-controller="Authentication" asp-action="RegisterUser">Skapa konto</a>
        </div>
    </div>
</div>