@using FleaMarket.Models.ViewModels;
@model LoginViewModel
@{
    ViewData["Title"] = "Logga in";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">Logga in</h2>
            <form method="post" asp-action="LoginUser" asp-controller="Authentication" novalidate>
                <div class="form-group">
                    <label asp-for=Email>Email:</label>
                    <input asp-for=Email type="email" class="form-control" id="email" placeholder="Ange din email-adress">
                    <span class="small text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for=Password>Lösenord:</label>
                    <input asp-for=Password type="password" class="form-control" id="password" rows="3" placeholder="Ange ditt lösenord" />
                    <span class="small text-danger" asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Logga in</button>
            </form>
            <a class="my-4" asp-controller="Authentication" asp-action="RegisterUser">Har du inget konto än? <span class="text-decoration-underline">Skapa konto.</span></a>
        </div>
    </div>
</div>