@using FleaMarket.Models.Entities;
@using FleaMarket.Services;
@using Microsoft.AspNetCore.Identity;
@inject MarketService marketService
@{
    var markets = await marketService.GetAllAsync();
    ViewData["Title"] = "Hem";
}

<section class="home-showcase">
    <div class="container">
        <h4>Vad leter du efter idag?</h4>
        <p>Är det något speciellt du vill hitta? Med TradeTrails kan du snabbt och enkelt finna vad du söker på en loppis eller marknad.</p>
    </div>
</section>

<section class="container home-container">
    <h4>Aktiva marknader</h4>
        @foreach (var market in markets)
        {
            <partial name="/Views/Partials/_MarketCard.cshtml" model="market" />
        }
</section>